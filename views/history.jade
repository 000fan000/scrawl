extends layout

block content

  h3 History

  table.table.table-striped.table-hover.table-condensed.table-bordered
    thead
      th Date
      th Status
      th Url
      th Title
      th Screen
    tbody
    each item in urls
      if item.statusCode == 'null'
        tr

          td= item.date
          td= item.statusCode 
          td
            a(href= item.url)
              = item.url
          td
            a(href= item.currentUrl)
              = item.title
          td
            a(href='images/#{item.filename}') View
      else
        tr.success

          td= item.date
          td= item.statusCode 
          td
            a(href= item.url)
              = item.url
          td
            a(href= item.currentUrl)
              = item.title
          td
            a(href='images/#{item.filename}') View

